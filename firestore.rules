rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcı dokümanları için kurallar
    match /users/{userId} {
      function isAdmin() {
        return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
      }
      
      function isPuantajci() {
        return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Puantajcı';
      }
      
      // Admin tüm kullanıcıları okuyabilir ve düzenleyebilir
      allow read, write: if isAdmin();
      
      // Puantajcılar kendi oluşturdukları işçileri okuyabilir
      allow read: if isPuantajci() && resource.data.createdBy == request.auth.uid;
      
      // Kullanıcılar kendi bilgilerini okuyabilir
      allow read: if request.auth != null && request.auth.uid == userId;
    }
    
    // İşçi puantaj kayıtları için kurallar
    match /puantaj/{puantajId} {
      allow read, write: if isAdmin();
      allow read, write: if isPuantajci() && resource.data.puantajciId == request.auth.uid;
      allow read: if request.auth != null && resource.data.isciId == request.auth.uid;
    }
    
    // Projeler koleksiyonu için kurallar
    match /projeler/{projeId} {
      allow read, write: if isAdmin();
      allow read, write: if isPuantajci();
      allow read: if request.auth != null;
    }
  }
} 